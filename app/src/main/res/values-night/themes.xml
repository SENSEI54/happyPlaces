<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyPlaces" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorNightPrimary</item>
        <item name="colorPrimaryDark">@color/colorNightPrimaryDark</item>
        <item name="colorAccent">@color/colorNightAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="customNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="customToolBarTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>
</resources>